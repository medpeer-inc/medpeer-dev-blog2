<div id="user-register-forms">
  <div class="vue">
    <p>単一ファイルコンポーネント使用</p>
    <user-register-form-vue></user-register-form-vue>
  </div>

  <div class="view">
    <p>formヘルパー使用</p>
    <user-register-form inline-template>
      <%= form_with model: @user, url: 'hoge' do |f| %>
        <div class="error-area">
          <p v-for='error in errors'>{{ error.message }}</p>
        </div>
        <div class="form-group">
          <%= f.label :lastname, '苗字:' %>
          <%= f.text_field :lastname, 'v-model': 'lastname' %>
          <%= f.label :firstname, '名前:' %>
          <%= f.text_field :firstname, 'v-model': 'firstname' %>
        </div>
        <div class="form-group">
          <%= f.label :age, '年齢:' %>
          <%= f.text_field :age, 'v-model': 'age' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メール:' %>
          <%= f.text_field :email, 'v-model': 'email' %>
        </div>
        <div class="submit">
          <%= f.button type: 'submit', '@click.prevent': 'onSubmit' do %>
            登録する
          <% end %>
        </div>
      <% end %>
    </user-register-form>
  </div>
</div>
<%= javascript_pack_tag 'chapter3/new' %>
